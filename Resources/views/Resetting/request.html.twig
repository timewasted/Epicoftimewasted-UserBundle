{% extends 'EpicoftimewastedUserBundle::layout.html.twig' %}

{% block content %}
{% spaceless %}
<form action="{{ path('epicoftimewasted_user_resetting_send_email') }}" method="post">
	<div id="userForm" class="twoColumn">
{% if error is not null %}
		<div class="note">{{ error|trans({}, 'EpicoftimewastedUserBundle') }}</div>
{% endif %}
		<div class="label"><label for="username">{{ 'resetting.request.username'|trans({}, 'EpicoftimewastedUserBundle') }}</label></div>
		<div class="content"><input type="text" id="username" name="username" value="{{ username }}" /></div>
{% if captcha is not null %}
		<div id="captcha">
			{{ captcha|raw }}
		</div>
{% endif %}
		<button type="submit">{{ 'resetting.request.submit'|trans({}, 'EpicoftimewastedUserBundle') }}</button>
	</div>
</form>
{% endspaceless %}
{% endblock %}
