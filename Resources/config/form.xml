<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="epicoftimewasted_user.form.user" factory-method="getForm" factory-service="epicoftimewasted_user.form_builder.user" class="Symfony\Component\Form\Form" />

        <service id="epicoftimewasted_user.form_builder.user" factory-method="createBuilder" factory-service="form.factory" class="Symfony\Component\Form\FormBuilder">
            <argument type="service" id="epicoftimewasted_user.form.type.user" />
            <argument />
            <argument type="collection">
                <argument key="data_class">%epicoftimewasted_user.model.user.class%</argument>
<!-- FIXME: Validation groups? -->
<!--
                <argument key="validation_groups">%fos_user.form.user.validation_groups%</argument>
-->
            </argument>
            <call method="addEventSubscriber">
                <argument type="service" id="epicoftimewasted_user.form.listener.user_canonical_fields" />
            </call>
        </service>

        <service id="epicoftimewasted_user.form.listener.user_canonical_fields" class="Epicoftimewasted\UserBundle\Form\UpdateCanonicalFieldsListener" public="false">
            <argument type="service" id="epicoftimewasted_user.user_manager" />
        </service>

        <service id="epicoftimewasted_user.form.type.user" class="%epicoftimewasted_user.form.type.user.class%">
            <argument>%epicoftimewasted_user.form.user.name%</argument>
            <argument type="collection">
<!-- FIXME: Template theme? -->
<!--
                <argument key="theme">%fos_user.template.theme%</argument>
-->
            </argument>
            <tag name="form.type" />
        </service>

        <service id="epicoftimewasted_user.form.handler.user" class="%epicoftimewasted_user.form.handler.user.class%" scope="request">
            <argument type="service" id="epicoftimewasted_user.form.user" />
            <argument type="service" id="request" />
            <argument type="service" id="epicoftimewasted_user.user_manager" />
        </service>

        <service id="epicoftimewasted_user.form.reset_password" factory-method="create" factory-service="form.factory" class="%form.factory.class%">
            <argument type="service" id="epicoftimewasted_user.form.type.reset_password" />
            <argument />
            <argument type="collection">
                <argument key="data_class">Epicoftimewasted\UserBundle\Form\ResetPassword</argument>
<!-- FIXME: Validation groups? -->
<!--
                <argument key="validation_groups">%epicoftimewasted_user.form.reset_password.validation_groups%</argument>
-->
            </argument>
        </service>

        <service id="epicoftimewasted_user.form.type.reset_password" class="%epicoftimewasted_user.form.type.reset_password.class%">
            <argument>%epicoftimewasted_user.form.reset_password.name%</argument>
            <argument type="collection">
<!-- FIXME: Template theme? -->
<!--
                <argument key="theme">%epicoftimewasted_user.template.theme%</argument>
-->
            </argument>
            <tag name="form.type" />
        </service>

        <service id="epicoftimewasted_user.form.handler.reset_password" class="%epicoftimewasted_user.form.handler.reset_password.class%" scope="request">
            <argument type="service" id="epicoftimewasted_user.form.reset_password" />
            <argument type="service" id="request" />
            <argument type="service" id="epicoftimewasted_user.user_manager" />
        </service>
<!--
        <service id="fos_user.form.change_password" factory-method="create" factory-service="form.factory" class="%form.factory.class%">
            <argument type="service" id="fos_user.form.type.change_password" />
            <argument />
            <argument type="collection">
                <argument key="data_class">FOS\UserBundle\Form\ChangePassword</argument>
                <argument key="validation_groups">%fos_user.form.change_password.validation_groups%</argument>
            </argument>
        </service>

        <service id="fos_user.form.type.change_password" class="%fos_user.form.type.change_password.class%">
