{% extends 'EpicoftimewastedUserBundle::layout.html.twig' %}

{% block content %}
<form action="{{ path('epicoftimewasted_user_user_reset_password_request') }}" method="POST">
	<div id="userForm">
		<div class="label"><label for="username">{{ 'user_reset_password_request_username'|trans([], 'EpicoftimewastedUserBundle') }}</label></div>
		<div class="content"><input type="text" id="username" name="username" value="{{ username }}" /></div>
{% if captcha is not null %}
		{{ captcha|raw }}
{% endif %}
		<button type="submit">{{ 'user_reset_password_request_submit'|trans([], 'EpicoftimewastedUserBundle') }}</button>
	</div>
</form>
{% endblock %}